<keymap version="1" name="Default copy" parent="$default">
  <action id="CloseAllEditors">
    <mouse-shortcut keystroke="shift control button142" />
  </action>
  <action id="CloseAllEditorsButActive">
    <mouse-shortcut keystroke="alt button142" />
  </action>
  <action id="CloseContent">
    <keyboard-shortcut first-keystroke="ctrl f4" />
    <mouse-shortcut keystroke="control button142" />
  </action>
  <action id="ReopenClosedTab">
    <mouse-shortcut keystroke="control button143" />
  </action>
  <action id="SearchEverywhere">
    <keyboard-shortcut first-keystroke="alt p" />
  </action>
  <action id="ToggleDistractionFreeMode">
    <mouse-shortcut keystroke="control button3" />
  </action>
</keymap>